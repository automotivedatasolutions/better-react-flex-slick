{
  "name": "better-react-flex-slick",
  "version": "0.0.6",
  "description": "Carousel components for React",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "standard src/**/*.js",
    "prebuild": "rm -rf dist",
    "build": "babel -d dist/ src/",
    "prepublish": "npm test && npm run build",
    "test": "npm run lint && mocha spec --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bentatum/better-react-flex-slick.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "component",
    "slick",
    "carousel",
    "react-slick",
    "react-flex-slick",
    "react-component"
  ],
  "author": "Benjamin Tatum <bentatum@me.com> (http://github.com/bentatum)",
  "license": "MIT",
  "bugs": {
    "url": "http://github.com/bentatum/better-react-flex-slick/issues"
  },
  "homepage": "http://github.com/bentatum/better-react-flex-slick",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint-plugin-jsx-control-statements": "^2.1.1",
    "expect": "^1.20.1",
    "jsx-control-statements": "^3.1.2",
    "mocha": "^2.4.5",
    "react": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "standard": "^7.0.1"
  },
  "peerDependencies": {
    "react": ">=0.14 || ^0.14.0-alpha"
  },
  "standard": {
    "globals": [
      "beforeEach",
      "describe",
      "it"
    ],
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": ["react", "es2015", "stage-0"],
    "plugins": [
      "jsx-control-statements",
      "transform-decorators-legacy"
    ]
  }
}
